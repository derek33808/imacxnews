datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int           @id @default(autoincrement())
  username  String        @unique
  password  String
  role      Role          @default(USER)
  createdAt DateTime      @default(now())
  comments  Comment[]
  likes     ArticleLike[]
}

