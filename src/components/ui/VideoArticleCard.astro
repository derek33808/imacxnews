<script is:inline>
  // è§†é¢‘æ’­æ”¾æ§åˆ¶è„šæœ¬
  document.addEventListener('DOMContentLoaded', function() {
    const videoCards = document.querySelectorAll('.video-article-card.has-video');
    
    videoCards.forEach(card => {
      const video = card.querySelector('.article-video');
      const overlay = card.querySelector('.video-overlay');
      
      if (video && overlay) {
        // ç±»å‹è½¬æ¢ä¸ºHTMLVideoElementå’ŒHTMLElement
        const videoEl = video;
        const overlayEl = overlay;
        
        // ç‚¹å‡»è§†é¢‘æˆ–è¦†ç›–å±‚æ’­æ”¾/æš‚åœ
        const togglePlay = () => {
          if (videoEl.paused) {
            videoEl.play();
            overlayEl.style.opacity = '0';
          } else {
            videoEl.pause();
            overlayEl.style.opacity = '1';
          }
        };

        videoEl.addEventListener('click', togglePlay);
        overlayEl.addEventListener('click', togglePlay);

        // è§†é¢‘æ’­æ”¾æ—¶éšè—è¦†ç›–å±‚å’ŒVIDEOæ ‡ç­¾
        videoEl.addEventListener('play', () => {
          overlayEl.style.opacity = '0';
          // æ·»åŠ æ’­æ”¾çŠ¶æ€ç±»ï¼Œè§¦å‘VIDEOæ ‡ç­¾éšè—åŠ¨ç”»
          const videoWrapper = videoEl.closest('.video-wrapper');
          if (videoWrapper) {
            videoWrapper.classList.add('playing');
            videoWrapper.classList.remove('paused');
          }
        });

        // è§†é¢‘æš‚åœæ—¶æ˜¾ç¤ºè¦†ç›–å±‚å’ŒVIDEOæ ‡ç­¾
        videoEl.addEventListener('pause', () => {
          overlayEl.style.opacity = '1';
          // æ·»åŠ æš‚åœçŠ¶æ€ç±»ï¼Œè§¦å‘VIDEOæ ‡ç­¾æ˜¾ç¤ºåŠ¨ç”»
          const videoWrapper = videoEl.closest('.video-wrapper');
          if (videoWrapper) {
            videoWrapper.classList.remove('playing');
            videoWrapper.classList.add('paused');
          }
        });

        // è§†é¢‘ç»“æŸæ—¶æ¢å¤åˆå§‹çŠ¶æ€
        videoEl.addEventListener('ended', () => {
          overlayEl.style.opacity = '1';
          // ç§»é™¤æ’­æ”¾çŠ¶æ€ç±»ï¼Œæ¢å¤VIDEOæ ‡ç­¾æ˜¾ç¤º
          const videoWrapper = videoEl.closest('.video-wrapper');
          if (videoWrapper) {
            videoWrapper.classList.remove('playing');
            videoWrapper.classList.remove('paused');
          }
        });

        // é¼ æ ‡ç¦»å¼€å¡ç‰‡æ—¶æš‚åœè§†é¢‘
        card.addEventListener('mouseleave', () => {
          if (!videoEl.paused) {
            videoEl.pause();
          }
        });
      }
    });
  });
</script>
