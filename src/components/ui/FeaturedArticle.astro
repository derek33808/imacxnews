---
import { getRelativeTime } from '../../utils/dateFormatter';
import { getCategoryById } from '../../data/categories';

const { article } = Astro.props;
const category = getCategoryById(article.category) || { name: 'Uncategorized', id: 'uncategorized' };

// ðŸŽ¬ For video articles, prioritize videoPoster over image
const displayImage = (article.mediaType === 'VIDEO' && article.videoPoster) 
  ? article.videoPoster 
  : article.image || '/images/placeholder.svg';
const articleHref = article.slug ? `/article/${article.slug}` : `/article/${article.id}`;
---

<article class="featured-article">
  <div class="featured-image-container">
    <img 
      src={displayImage} 
      alt={article.title} 
      class="featured-image"
      loading="eager"
      width="800"
      height="450"
      style="opacity:0.7; transition: opacity 0.3s ease"
    />
    
    {/* ðŸŽ¬ Video indicator for featured video articles */}
    {article.mediaType === 'VIDEO' && (
      <div class="featured-video-indicator">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
          <path d="M5 3l14 9-14 9z"></path>
        </svg>
        {article.videoDuration && (
          <span class="featured-duration">
            {Math.floor(article.videoDuration / 60)}:{(article.videoDuration % 60).toString().padStart(2, '0')}
          </span>
        )}
      </div>
    )}
    <div class="featured-overlay"></div>
  </div>
  
  <div class="featured-content">
    <a href={`/category/${article.category}`} class={`category-tag ${article.category}`}>
      {category.name}
    </a>
    
    <h2 class="featured-title">
      <a href={articleHref}>{article.title}</a>
    </h2>
    
    <p class="featured-excerpt">{article.excerpt}</p>
    
    <div class="featured-meta">
      <span class="featured-author">{article.author}</span>
      <span class="featured-date">{getRelativeTime(article.publishDate)}</span>
    </div>
    
    <a href={articleHref} class="featured-read-more btn">
      Read Full Story
    </a>
  </div>
</article>

<style>
  .featured-article {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: hidden;
    height: 500px;
    margin-bottom: var(--space-8);
  }
  
  .featured-image-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  
  .featured-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .featured-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.8) 100%
    );
  }
  
  .featured-content {
    position: relative;
    z-index: 1;
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    height: 100%;
    color: white;
  }
  
  .featured-title {
    font-size: 1.75rem;
    margin: var(--space-3) 0;
    line-height: 1.2;
  }
  
  .featured-title a {
    color: white;
    text-decoration: none;
    transition: color var(--transition);
  }
  
  .featured-title a:hover {
    color: rgba(255, 255, 255, 0.8);
  }
  
  .featured-excerpt {
    margin-bottom: var(--space-4);
    font-size: 1rem;
    line-height: 1.5;
    max-width: 700px;
  }
  
  .featured-meta {
    display: flex;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
    font-size: 0.875rem;
  }
  
  .featured-author {
    font-weight: 500;
  }
  
  .featured-date {
    opacity: 0.8;
  }
  
  .featured-read-more {
    align-self: flex-start;
  }
  
  .category-tag {
    align-self: flex-start;
  }
  
  @media (min-width: 768px) {
    .featured-article {
      height: 600px;
    }
    
    .featured-title {
      font-size: 2.5rem;
      max-width: 800px;
    }
    
    .featured-excerpt {
      font-size: 1.125rem;
    }
  }
  
  @media (max-width: 640px) {
    .featured-article {
      height: 400px;
    }
    
    .featured-title {
      font-size: 1.5rem;
    }
    
    .featured-excerpt {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  }
  
  /* ðŸŽ¬ Featured video indicator styles */
  .featured-video-indicator {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    color: white;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
  }
  
  .featured-video-indicator svg {
    opacity: 0.9;
    transition: all 0.3s ease;
  }
  
  .featured-article:hover .featured-video-indicator svg {
    opacity: 1;
    transform: scale(1.1);
  }
  
  .featured-duration {
    background: rgba(0, 0, 0, 0.8);
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 600;
  }
</style>
