  }

  .load-more-btn .icon {
    width: 16px;
    height: 16px;
  }

  /* Âä†ËΩΩÈ™®Êû∂Â±èÊ†∑Âºè */
  .loading-skeleton {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .skeleton-comment {
    display: flex;
    gap: var(--space-3);
    padding: var(--space-4);
  }

