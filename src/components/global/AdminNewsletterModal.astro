    }
  }
  
  // Á°Æ‰øùÂú®DOMÂ∞±Áª™ÂêéÂàùÂßãÂåñ
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeAdminNewsletterModal);
  } else {
