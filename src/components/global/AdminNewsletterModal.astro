  function formatSendStats(stats: any) {
    if (!stats) return '';
    const parts = [];
    if (Number.isFinite(stats.articlesFound)) parts.push(`Articles: ${stats.articlesFound}`);
    if (Number.isFinite(stats.subscribersFound)) parts.push(`Subscribers: ${stats.subscribersFound}`);
    if (Number.isFinite(stats.emailsSent)) parts.push(`Sent: ${stats.emailsSent}`);
    if (Number.isFinite(stats.emailsFailed) && stats.emailsFailed > 0) {
      parts.push(`Failed: ${stats.emailsFailed}`);
    }
    return parts.length ? ` (${parts.join(', ')})` : '';
  }

  // Âä†ËΩΩNewsletterËÆ¢ÈòÖÂàóË°®
  async function loadNewsletterSubscriptions() {
    try {
      showLoading();
      hideMessage();

      const params = new URLSearchParams({
        page: currentPage.toString(),
        limit: '20',
        search: currentFilters.search,
        status: currentFilters.status,
        sortBy: currentFilters.sortBy,
        sortOrder: currentFilters.sortOrder
      });

      console.log('üìß Loading newsletter subscriptions with params:', params.toString());

      const response = await fetch(`/api/admin/newsletter-subscriptions?${params}`, {
        credentials: 'include',
        headers: {
          'Accept': 'application/json',
          'Content-Type': 'application/json'
        }
      });

      console.log('üìä Response status:', response.status);
      console.log('üìä Response ok:', response.ok);

      if (!response.ok) {
        let errorText = '';
        try {
          errorText = await response.text();
        } catch (e) {
          errorText = 'Network connection error';
        }
        console.error('‚ùå HTTP Error Response:', errorText);
        
        if (response.status === 401) {
          showMessage('Authentication required. Please refresh the page and login again.', 'error');
          return;
        } else if (response.status === 403) {
          showMessage('Administrator access required.', 'error');
          return;
        } else if (response.status >= 500) {
          showMessage('Server error. Please try again later.', 'error');
          return;
        }
        
        throw new Error(`HTTP ${response.status}: ${response.statusText || 'Network Error'}`);
      }

      let result;
      try {
        result = await response.json();
      } catch (parseError) {
        console.error('‚ùå JSON Parse Error:', parseError);
        throw new Error('Invalid response format from server');
      }

      if (!result.success) {
        console.error('‚ùå API Error:', result);
        if (result.error === 'LOGIN_REQUIRED') {
          showMessage('Please login as an administrator to view newsletter subscriptions.', 'error');
        } else if (result.error === 'INSUFFICIENT_PERMISSIONS') {
          showMessage('Administrator access required to view newsletter subscriptions.', 'error');
        } else {
          showMessage(result.message || 'Failed to load subscriptions', 'error');
        }
        showNoResults();
        return;
      }

      console.log('‚úÖ Newsletter subscriptions loaded:', result.data);

      // Ê£ÄÊü•Êï∞ÊçÆÂÆåÊï¥ÊÄß
      if (!result.data || !result.data.subscriptions || !result.data.stats || !result.data.pagination) {
        console.error('‚ùå Incomplete API response:', result);
        showMessage('Incomplete data received from server', 'error');
        showNoResults();
        return;
      }

      // Êõ¥Êñ∞ÁªüËÆ°‰ø°ÊÅØ
      updateStats(result.data.stats);
      
      // Êõ¥Êñ∞ÂàóË°®
      updateSubscriptionsList(result.data.subscriptions);
      
      // Êõ¥Êñ∞ÂàÜÈ°µ
      updatePagination(result.data.pagination);

      showTable();

    } catch (error) {
      console.error('‚ùå Error loading newsletter subscriptions:', error);
      
      let errorMessage = 'Unknown error occurred';
      if (error instanceof Error) {
        errorMessage = error.message;
        
        // Êèê‰æõÊõ¥ÂèãÂ•ΩÁöÑÈîôËØØÊ∂àÊÅØ
        if (error.message.includes('Failed to fetch') || error.message.includes('Network Error')) {
          errorMessage = 'Network connection error. Please check your internet connection and try again.';
        } else if (error.message.includes('401')) {
          errorMessage = 'Authentication expired. Please refresh the page and login again.';
        } else if (error.message.includes('500')) {
          errorMessage = 'Server error. Please try again in a few moments.';
        }
      }
      
      showMessage(`Failed to load subscriptions: ${errorMessage}`, 'error');
      showNoResults();
    }
  }

