</footer>

<style>
  .site-footer {
    background-color: var(--color-background-alt);
    color: var(--color-text);
    padding: var(--space-8) 0 var(--space-4);
    border-top: 1px solid var(--color-border);
    margin-top: 0; /* Áî±JavaScriptËá™Âä®ËÆ°ÁÆóÂπ∂ËÆæÁΩÆÈó¥Ë∑ù */
    transition: 
      background-color var(--transition),
      border-color var(--transition),
      color var(--transition);
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
    margin-bottom: var(--space-8);
  }
  
  .footer-logo a {
    display: inline-block;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
    text-decoration: none;
    margin-bottom: var(--space-2);
  }
  
  .logo-text {
    font-weight: 400;
  }
  
  .logo-accent {
    color: var(--color-primary);
  }
  
  .tagline {
    color: var(--color-text-light);
    margin-bottom: var(--space-4);
  }
  
  .footer-links {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: var(--space-8);
  }
  
  .footer-section h3 {
    font-size: 1.125rem;
    margin-bottom: var(--space-4);
  }
  
  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-section li {
    margin-bottom: var(--space-2);
  }
  
  .footer-section a {
    color: var(--color-text-light);
    text-decoration: none;
    transition: color var(--transition);
  }
  
  .footer-section a:hover {
    color: var(--color-primary);
  }
  
  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    margin-top: var(--space-2);
  }
  
  .newsletter-form input {
    padding: var(--space-2) var(--space-3);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background-color: var(--color-background);
    color: var(--color-text);
    width: 100%;
    transition: 
      border-color var(--transition),
      background-color var(--transition),
      color var(--transition);
  }
  
  .newsletter-form input:focus {
    outline: none;
    border-color: var(--color-primary);
  }
  
  /* Â∑≤ËÆ¢ÈòÖÁä∂ÊÄÅÊ†∑Âºè - ÁÆÄÂåñÁâà */
  .subscribed-status {
    background-color: rgba(16, 185, 129, 0.05);
    border: 1px solid rgba(16, 185, 129, 0.2);
    border-radius: var(--radius-sm);
    padding: var(--space-3);
    margin-top: var(--space-2);
  }
  
  .subscription-info {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
  }
  
  .subscription-check {
    color: #10b981;
    font-size: 0.875rem;
    font-weight: bold;
  }
  
  .subscription-message {
    font-size: 0.75rem;
    color: var(--color-text-light);
    margin: 0;
  }
  
  .subscription-email {
    font-size: 0.75rem;
    color: var(--color-text);
    font-family: monospace;
    margin: 0;
  }
  
  
  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
    color: var(--color-text-light);
    font-size: 0.875rem;
    gap: var(--space-4);
  }
  
  .social-links {
    display: flex;
    gap: var(--space-4);
  }
  
  .social-links a {
    color: var(--color-text-light);
    transition: color var(--transition);
  }
  
  .social-links a:hover {
    color: var(--color-primary);
  }
  
  @media (min-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr 2fr;
    }
    
    .footer-links {
      grid-template-columns: repeat(4, 1fr);
      gap: var(--space-4);
    }
    
    .footer-bottom {
      flex-direction: row;
    }
  }
  
  @media (max-width: 767px) {
    .footer-links {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<script>
  // üÜï FooterÈÇÆ‰ª∂ËÆ¢ÈòÖË°®ÂçïÂ§ÑÁêÜ - ÁÆÄÂåñÁâàÊú¨
  const form = document.querySelector('#footerNewsletterForm');
  const subscribedStatus = document.getElementById('footerSubscribedStatus');
  const subscriptionEmail = document.getElementById('footerSubscriptionEmail');
  
  // ÂàùÂßãÂåñ
  document.addEventListener('DOMContentLoaded', () => {
    checkFooterSubscriptionStatus();
  });
  
  // Â§ÑÁêÜË°®ÂçïÊèê‰∫§
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const target = e.target as HTMLFormElement;
      if (!target) return;
      
      const submitBtn = target.querySelector('button[type="submit"]') as HTMLButtonElement;
      if (!submitBtn) return;
      
      // Á¶ÅÁî®Ë°®ÂçïÈò≤Ê≠¢ÈáçÂ§çÊèê‰∫§
      submitBtn.disabled = true;
      const originalText = submitBtn.textContent;
      submitBtn.textContent = 'Subscribing...';
      
      try {
        const response = await fetch('/api/newsletter/subscribe', {
          method: 'POST',
          credentials: 'include',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ source: 'footer' })
        });
        
        const result = await response.json();
        
        if (result.success) {
          alert('üéâ ' + result.message);
          if (form instanceof HTMLFormElement) {
            form.reset();
          }
          // ÈáçÊñ∞Ê£ÄÊü•Áä∂ÊÄÅ
          await checkFooterSubscriptionStatus();
          // ÈÄöÁü•ÂÖ∂‰ªñÁªÑ‰ª∂Áä∂ÊÄÅÂ∑≤Êõ¥Êîπ
          window.dispatchEvent(new CustomEvent('newsletterStatusChanged', { 
            detail: { subscribed: true } 
          }));
        } else {
          if (result.error === 'LOGIN_REQUIRED') {
            if (confirm('üìß To subscribe to our newsletter, you need to have an account.\n\n' + result.message + '\n\nWould you like to login or register now?')) {
              if (window.openUserLoginModal) {
                window.openUserLoginModal();
              } else {
                window.location.href = '/#login';
              }
            }
          } else {
            alert('‚ÑπÔ∏è ' + result.message);
          }
        }
      } catch (error) {
        console.error('Newsletter subscription failed:', error);
        alert('‚ùå Failed to subscribe. Please try again later.');
      } finally {
        // ÊÅ¢Â§çË°®ÂçïÁä∂ÊÄÅ
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    });
  }
  
  // ÊòæÁ§∫ËÆ¢ÈòÖË°®Âçï
  function showFooterSubscriptionForm(email: string = '') {
    if (form instanceof HTMLElement) form.style.display = 'block';
    if (subscribedStatus instanceof HTMLElement) subscribedStatus.style.display = 'none';
    
    // È¢ÑÂ°´ÈÇÆÁÆ±
    if (email && form) {
      const emailInput = form.querySelector('input[type="email"]') as HTMLInputElement;
      if (emailInput) {
        emailInput.value = email;
        emailInput.placeholder = 'Your email: ' + email;
      }
    }
  }
  
  // ÊòæÁ§∫Â∑≤ËÆ¢ÈòÖÁä∂ÊÄÅ
  function showFooterSubscribedStatus(email: string) {
    if (form instanceof HTMLElement) form.style.display = 'none';
    if (subscribedStatus instanceof HTMLElement) subscribedStatus.style.display = 'block';
    if (subscriptionEmail instanceof HTMLElement) subscriptionEmail.textContent = email;
  }
  
  // Ê£ÄÊü•FooterËÆ¢ÈòÖÁä∂ÊÄÅ
  async function checkFooterSubscriptionStatus() {
    try {
      const authResponse = await fetch('/api/auth/status', { credentials: 'include' });
      if (!authResponse.ok) {
        showFooterSubscriptionForm();
        return;
      }
      
      const authResult = await authResponse.json();
      if (!authResult.success || !authResult.user) {
        showFooterSubscriptionForm();
        return;
      }
      
      const subscriptionResponse = await fetch('/api/newsletter/subscribe', {
        method: 'GET',
        credentials: 'include'
      });
      
      if (subscriptionResponse.ok) {
        const result = await subscriptionResponse.json();
        if (result.subscribed) {
          showFooterSubscribedStatus(result.email || authResult.user.email);
        } else {
          showFooterSubscriptionForm(authResult.user.email);
        }
      } else {
        showFooterSubscriptionForm(authResult.user.email);
      }
    } catch (error) {
      console.error('Footer subscription status check failed:', error);
      showFooterSubscriptionForm();
    }
  }
  
  // È°µÈù¢ÂèØËßÅÊÄßÂèòÂåñÊó∂ÈáçÊñ∞Ê£ÄÊü•Áä∂ÊÄÅ
  document.addEventListener('visibilitychange', () => {
    if (!document.hidden) {
      checkFooterSubscriptionStatus();
    }
  });
  
  // ÁõëÂê¨ÂÖ∂‰ªñÁªÑ‰ª∂ÁöÑËÆ¢ÈòÖÁä∂ÊÄÅÂèòÂåñ
  window.addEventListener('newsletterStatusChanged', (e: any) => {
    console.log('üìß Footer: Received newsletter status change:', e.detail);
    checkFooterSubscriptionStatus();
  });
</script>
</script>