  .admin-manager-modal-overlay.active .admin-manager-modal {
    transform: translateY(0) scale(1);
  }
  /* üé® Modern Header Design */
  .modal-header {
    background: linear-gradient(135deg, 
      var(--modal-primary) 0%, 
      var(--modal-primary-light) 50%, 
      var(--modal-primary-dark) 100%);
