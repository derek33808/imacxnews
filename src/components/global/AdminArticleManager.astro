    align-items: center;
    justify-content: center;
    z-index: 2000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    padding: 20px;
  }

  .admin-manager-modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  /* üéØ Modern Modal Body */
  .admin-manager-modal {
    background: var(--glass-bg);
