<style is:global>
  /* üé® Modern Design Variables */
  :root {
    --modal-primary: #6366f1;
    --modal-primary-light: #8b5cf6;
    --modal-primary-dark: #4f46e5;
    --modal-success: #10b981;
    --modal-warning: #f59e0b;
    --modal-danger: #ef4444;
    --modal-bg: #ffffff;
    --modal-bg-secondary: #f8fafc;
    --modal-text: #1e293b;
    --modal-text-light: #64748b;
    --modal-border: #e2e8f0;
    --modal-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    --modal-shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    --modal-radius: 16px;
    --modal-radius-lg: 24px;
    --glass-bg: rgba(255, 255, 255, 0.9);
    --glass-border: rgba(255, 255, 255, 0.2);
  }

  /* üîÑ Keyframe Animations */
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --modal-bg: #0f172a;
      --modal-bg-secondary: #1e293b;
      --modal-text: #f1f5f9;
      --modal-text-light: #94a3b8;
      --modal-border: #334155;
      --glass-bg: rgba(15, 23, 42, 0.9);
      --glass-border: rgba(255, 255, 255, 0.1);
    }
  }

  /* üåü Main Modal Container - Glassmorphism Design */
  .admin-manager-modal-overlay {
    position: fixed;
    inset: 0;
    background: 
      radial-gradient(circle at 30% 70%, rgba(99, 102, 241, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 30%, rgba(139, 92, 246, 0.1) 0%, transparent 50%),
      linear-gradient(135deg, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6));
    backdrop-filter: blur(16px) saturate(180%);
    -webkit-backdrop-filter: blur(16px) saturate(180%);
