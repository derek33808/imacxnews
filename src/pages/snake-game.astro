---
import Layout from '../layouts/Layout.astro';
import SnakeGame from '../components/games/SnakeGame.astro';
---

<Layout title="Snake Game | imacx-news">
  <div class="container">
    <div class="game-container">
      <h1>Snake Game</h1>
      <p class="instructions">Use arrow keys to control the snake. Collect the red food to grow and earn points!</p>
      <SnakeGame />
    </div>
  </div>
</Layout>

<style>
  .game-container {
    max-width: 600px;
    margin: var(--space-8) auto;
    text-align: center;
  }

  .instructions {
    color: var(--color-text-light);
    margin-bottom: var(--space-6);
  }
</style>