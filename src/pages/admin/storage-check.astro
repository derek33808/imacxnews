  <script>
    const checkBtn = document.getElementById('checkBtn');
    const loading = document.getElementById('loading');
    const results = document.getElementById('results');

    checkBtn.addEventListener('click', async () => {
      checkBtn.disabled = true;
      loading.style.display = 'block';
      results.style.display = 'none';
      
      try {
        const response = await fetch('/api/storage/verify-config', {
          method: 'GET',
          credentials: 'include'
        });
        
        const data = await response.json();
        displayResults(data);
        
      } catch (error) {
        displayError('ç½‘ç»œé”™è¯¯: ' + error.message);
      } finally {
        checkBtn.disabled = false;
        loading.style.display = 'none';
        results.style.display = 'block';
      }
    });

    function displayResults(data) {
      let html = '';
      
      // Overall Status
      if (data.overallStatus) {
        const statusClass = data.overallStatus.ready ? 'success' : 'error';
        html += `
          <div class="section ${statusClass}">
            <h3>ğŸ“‹ æ€»ä½“çŠ¶æ€</h3>
            <div class="status-item">
              <span class="status-label">é…ç½®å®Œæˆåº¦</span>
